<!DOCTYPE html>
<html lang="ja">
<head>
  <%- include("../_share/metadata.ejs") %>
  <title>Register Comfirmation</title>
  <%- include("../_share/stylesheets.ejs") %>
</head>
<body>
  <div class="outerframe">
    <%- include("../_share/navbar.ejs") %>
    <main class="container">
      <div class="border-bottom mt-5 mb-3">
        <h1>Confirmation</h1>
      </div>
      <div class="row justify-content-center">
        <form class="col-sm-10 col-lg-8">
          <div class="form-group row">
            <label for="name" class="col-sm-3 col-form-label" style="text-align: center;">Username：</label>
            <div class="col-sm-9">
              <input type="text" id="name" name="name" class="form-control" placeholder="Please enter your name" value="<%= name %>" readonly/>
            </div>
          </div>
          <div class="form-group row">
            <label for="newemail" class="col-sm-3 col-form-label" style="text-align: center;">Email：</label>
            <div class="col-sm-9">
              <input type="text" id="newemail" name="newemail" class="form-control" placeholder="Please enter your email" value="<%= newemail %>" readonly/>
            </div>
          </div>
          <div class="form-group row">
            <label for="newpassword" class="col-sm-3 col-form-label" style="text-align: center;">Password：</label>
            <div class="col-sm-9">
              <input type="password" id="newpassword" name="newpassword" class="form-control" placeholder="Please enter a password" value="<%= newpassword %>" readonly/>
            </div>
          </div>
          <div class="form-group row">
            <label for="description" class="col-sm-3 col-form-label" style="text-align: center;">Description：</label>
            <div class="col-sm-9">
              <textarea id="description" name="description" class="form-control" placeholder="This field is optional" readonly><%= description %></textarea>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-12 row" style="justify-content: space-around;">
              <input type="submit" data-method="POST" data-action="/register" class="btn btn-primary" value="back" style="width: 80px;" />
              <input type="submit" data-method="POST" data-action="/register/execute" class="btn btn-primary" value="confirm"  style="width: 80px;" />
            </div>
          </div>
        </form>
      </div>
    </main>
    <%- include("../_share/footer.ejs") %>
  </div>
  <%- include("../_share/javascripts.ejs") %>
  <script type="text/javascript" src="/public/javascripts//regist.js"></script>
</body>
</html>